
<LinearLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    style="@style/LayoutBase.Vertical.Content"
	    >
    <include
        layout="@layout/title_layout" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/input_single"
        >
		<LinearLayout
		    android:layout_marginTop="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    	<TextView
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="5dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="15sp"
			        android:text="@string/passwd_protect_alert" 
			        android:textColor="#ccc"
			        />
			    <TextView
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="5dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="20sp"
			        android:text="@string/passwd_protect_input"
			        android:textColor="#000"
			         />
				<EditText
				    android:id="@+id/EditText_passwd"
				    android:layout_marginLeft="5dp"
				    android:layout_marginRight="5dp"
				    android:inputType="textPassword"
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
			    <TextView
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="5dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="20sp"
			        android:text="@string/passwd_protect_confrim" 
			        android:textColor="#000"/>
				<EditText
				    android:id="@+id/EditText_confirm_passwd"
				    android:layout_marginLeft="5dp"
				    android:layout_marginRight="5dp"
				    android:inputType="textPassword"
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content"
				    />
				<Button
				    android:layout_marginLeft="5dp"
				    android:layout_marginRight="5dp"
				    android:id="@+id/passwd_protect_confirm"
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textAlignment="center"
			        android:textSize="20sp"
			        android:text="@string/passwd_protect_button_confrim"
			        android:background="@drawable/app_common_bt_bg_normal"
				    />
		</LinearLayout>
		
		
	</LinearLayout>
</LinearLayout>