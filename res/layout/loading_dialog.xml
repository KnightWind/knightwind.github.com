<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_account_loading_dialog_bg"
    >

    <LinearLayout android:id="@+id/body"  
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:paddingLeft="20dip"
        android:paddingTop="20dip"
        android:paddingRight="20dip"
        android:paddingBottom="20dip">

        <ProgressBar android:id="@+id/progress_bar"
            style="@style/MediumInverse"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="10000"
	        android:paddingRight="4dip"  
            android:layout_marginRight="12dip" />

        <TextView android:id="@+id/tv_loading_dialog_msg"
            android:text="@string/downloading_moderator_account"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff141414"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</FrameLayout>

